<flectra>
    <data>
        <template id="website_hr_recuitment_apply" name="Website HR Recruitment Apply Inherit"
                  inherit_id="website_hr_recruitment.apply">
            <xpath expr="//div[@class='form-group form-field o_website_form_required_custom'][3]" position="after">
                <div class="form-group form-field o_website_form_required_custom">
                    <div class="col-md-3 col-sm-4 text-right">
                        <label class="control-label" for="jenis_kelamin">Jenis Kelamin</label>
                    </div>
                    <div class="col-md-7 col-sm-8">
                        <select class="form-control o_website_form_input" name="jenis_kelamin">
                            <option value="laki-laki">Laki-Laki</option>
                            <option value="perempuan">Perempuan</option>
                        </select>
                    </div>
                </div>
                <div class="form-group form-field o_website_form_required_custom">
                    <div class="col-md-3 col-sm-4 text-right">
                        <label class="control-label" for="usia">Usia</label>
                    </div>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="usia" required=""/>
                    </div>
                </div>
                <div class="form-group form-field o_website_form_required_custom">
                    <div class="col-md-3 col-sm-4 text-right">
                        <label class="control-label" for="min_education">Pendidikan</label>
                    </div>
                    <div class="col-md-7 col-sm-8">
                        <select class="form-control o_website_form_input" name="min_education">
                            <option value="d3">D3</option>
                            <option value="s1">S1</option>
                            <option value="s2">S2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group form-field o_website_form_required_custom">
                    <div class="col-md-3 col-sm-4 text-right">
                        <label class="control-label" for="work_experience">Pengalaman Kerja (Thn)</label>
                    </div>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="work_experience" required=""/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</flectra>